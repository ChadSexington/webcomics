<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:page_title) ? yield(:page_title) : 'Webcomics' %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= content_for?(:body_class) ? yield(:body_class) : '' %>">
  <%= render 'layouts/navbar' %>
  <%= render 'layouts/flash' unless local_assigns[:hide_flash] %>
  <div class="container">
    <%= yield %>
  </div>
  <%= content_for?(:javascript) ? yield(:javascript) : '' %>
  </body>
</html>
